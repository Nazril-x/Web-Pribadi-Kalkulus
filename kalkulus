  <script>
    // Konversi Desimal ke Biner
    function convertToBinary() {
      let decimal = document.getElementById("decimalInput").value;
      if(decimal === "") {
        alert("Masukkan angka desimal dulu!");
        return;
      }
      let binary = Number(decimal).toString(2);
      document.getElementById("binaryResult").innerText = binary;
    }

    // Parsing polinomial sederhana (hanya +, -, x^n)
    function parsePolynomial(poly) {
      poly = poly.replace(/-/g, "+-"); 
      let terms = poly.split("+").filter(t => t !== "");
      return terms.map(term => {
        let match = term.match(/^([+-]?\d*)x\^?(\d*)$/);
        if(match) {
          let coef = match[1] === "" || match[1] === "+" ? 1 : (match[1] === "-" ? -1 : Number(match[1]));
          let exp = match[2] === "" ? 1 : Number(match[2]);
          return {coef, exp};
        } else if(term.includes("x")) {
          let coef = term.replace("x","");
          coef = coef === "" || coef === "+" ? 1 : (coef === "-" ? -1 : Number(coef));
          return {coef, exp: 1};
        } else {
          return {coef: Number(term), exp: 0};
        }
      });
    }

    // Hitung Turunan
    function calculateDerivative() {
      let poly = document.getElementById("polyInput").value;
      let terms = parsePolynomial(poly);
      let derivative = terms.map(t => {
        if(t.exp === 0) return null;
        return (t.coef * t.exp) + "x^" + (t.exp-1);
      }).filter(x => x !== null).join(" + ");
      document.getElementById("calcResult").innerText = derivative || "0";
    }

    // Hitung Integral
    function calculateIntegral() {
      let poly = document.getElementById("polyInput").value;
      let terms = parsePolynomial(poly);
      let integral = terms.map(t => {
        return (t.coef/(t.exp+1)).toFixed(2) + "x^" + (t.exp+1);
      }).join(" + ") + " + C";
      document.getElementById("calcResult").innerText = integral;
    }
  </script>

